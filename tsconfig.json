{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "importHelpers": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "lib": [ "ES2020", "dom" ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "paths": {
      "zotero-plugin/*": ["./node_modules/zotero-plugin/dist/esm/*"]
    }
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "locale/**/*.*",
    "**/*.spec.ts",
    "typings"
  ]
}
